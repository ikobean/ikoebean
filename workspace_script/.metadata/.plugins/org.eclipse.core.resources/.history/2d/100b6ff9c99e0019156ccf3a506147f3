    <script type="text/javascript">

	    function login(){
	    	$.ajax({
	    		method:"get"
	    	   ,url:"LoginInfo.jsp"
	    	   ,success:function(data){
	    		   var u_id =$("#p_id").val();
	    		   var u_pw =$("#p_pw").val();
	    		   var jsonDoc=JSON.parse(data);
	    		   var id="";
	    		   var pw="";
	    		   if(jsonDoc.length>0){
	    			   for(var i=0; i<jsonDoc.length;i++){
	    				   if(u_id==jsonDoc[i].p_id){
	    					   if(u_pw==jsonDoc[i].p_pw){
	    						   id=jsonDoc[i].p_id;
								   pw=jsonDoc[i].p_pw
	    					   }
	    				   }
	    			   }
	    		   }
	    		   $("#d_login").hide();
	    	       $("#d_logout").show();
	    	       $("#picture").show();
	    	   }
	    	})
	    }
/* 	    	var db_id="ikobean";
	    	var db_pw="111";
	    	var u_id=$("#p_id").val();
	    	var u_pw=$("#p_pw").val();
	    	if(db_id==u_id){
	    		if(db_pw==u_pw){
	    	    	$("#d_login").hide();
	    	    	$("#d_logout").show();
	    	    	$("#picture").show();
	    		}
	    	} */
	    function logout(){
	    	alert("안녕!");
	    	$("#d_login").show();
	    	$("#d_logout").hide();
	    	$("#picture").hide();
	    	
	    	
	    }
	    	
	    function picture(){
	    	$.ajax({
	    		method:"get"
	 	    	   ,url:"../picture/pictureMain.html"
	 	    	   ,success:function(result){
	 	    		   $("#contents").html(result)
	 	    	   }
	    	})
	    }
    </script>
    
