	}
	
	public String updatefile(int bm_no) {
		logger.info("updatefile 호출 성공");
		String updatefile="";
		try {
			sqlSession = sqlSessionFactory.openSession();
			//xml에 있는 아이디랑 맞춰주기
			updatefile = sqlSession.selectOne("updatefile",bm_no);
		} catch (Exception e) {
			e.printStackTrace();
		}finally {
			if(sqlSession!=null) {
				sqlSession.close();
			}
		}
		if(updatefile==null) {
			updatefile="";
		}
		return updatefile;
	}
	public String transactionTest(List<Map<String,Object>> pMap) {
		int result=0;
		int result2=0;
		try {
			 sqlSession = sqlSessionFactory.openSession(false);//오토커밋 off
									   //xml에 있는 아이디랑 맞춰주기
			result = sqlSession.update("deptInsert",pMap);
			result = sqlSession.update("empInsert",pMap);
			if(result)
			sqlSession.commit();
		} catch (Exception e) {
			e.printStackTrace();
		}finally {
			if(sqlSession!=null) {
				sqlSession.close();
			}
		}
		return result;
	}


}
